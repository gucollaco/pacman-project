    "version": "2.0.0",
    "tasks": [
        {
            "label": "compila",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}",
            ],
            "problemMatcher": []
        },
        {
            "label": "compila CG C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}",
                "-lfreeglutdll",
                "-lglu32",
                "-lopengl32"
            ],
            "problemMatcher": []
        },
        {
            "label": "compila CG C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}",
                "-lfreeglutdll",
                "-lglu32",
                "-lopengl32"
            ],
            "problemMatcher": []
        },

    ]
}